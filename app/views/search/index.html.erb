<header>
	<div class="container">
		<div class="row-fluid">
			<h1>whitebox <small>search your social networks</small></h1>
		</div>
	</div>
</header>

<div class="container">
	<div class="row-fluid">
		<div class="span8 offset2">

			<div class="search-main">
				<div class="reset">
					<p>enter your search term</p>
					<%= form_tag root_path, :method => "get", :class => "form-search" do %>
						<%= text_field_tag :query, @query || '', :placeholder => "e.g. hack cyprus" %>
						<%= submit_tag 'Search', :class => "btn" %>
					<% end %>
				</div>
			</div>

		</div>
	</div>
	
	<div class="row-fluid">
		<div class="span12">

			<% if @message != "" %>
				<p class="document flash hide"><i><%= @message %></i><%= image_tag('loading.gif'); %></p>
			<% end %>

			<% if @documents.present? %>

				<% @documents.each_with_index do |doc, index| %>

					<div class="document">

					</div>
				
				<% end %>
			
			<% end %>
		</div>

	</div>

</div>